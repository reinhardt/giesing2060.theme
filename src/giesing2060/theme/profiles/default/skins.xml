<?xml version="1.0"?>
<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">

    <object name="giesing2060_theme"
        meta_type="Filesystem Directory View"
        directory="giesing2060.theme:skins/giesing2060_theme"/>

    <skin-path name="Giesing2060 Theme" based-on="Plone Default">
      <layer name="giesing2060_theme"
         insert-after="custom"/>
    </skin-path>

    <skin-path name="Plone Default">
        <layer name="giesing2060_theme"
            insert-after="custom"/>
    </skin-path>

    <skin-path name="Plone Classic Theme">
        <layer name="giesing2060_theme"
            insert-after="custom"/>
    </skin-path>

    <skin-path name="Sunburst Theme">
        <layer name="giesing2060_theme"
            insert-after="custom"/>
    </skin-path>

</object>

